# Start XDG autostart .desktop files using dex
exec --no-startup-id dex --autostart --environment i3

# Dark theme
exec --no-startup-id export GTK_THEME=Adwaita:dark

# Polybar
exec_always --no-startup-id sh $HOME/.config/polybar/launch.sh

# Background
exec_always feh --bg-fill ~/Pictures/map.jpg

# Compositor
exec_always picom --config ~/.config/picom/picom.conf

# Screen locking
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# Network manager
exec --no-startup-id nm-applet

# Screenshots
bindsym Print exec maim ~/Pictures/screenshot_$(date +%Y-%m-%d_%H-%M-%S).png
bindsym $mod+Print exec maim -s ~/Pictures/screenshot_$(date +%Y-%m-%d_%H-%M-%S).png

# Audio controls
bindsym F1 exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym F2 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym F3 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%

# Window behavior
floating_modifier $mod
tiling_drag modifier titlebar

# Application shortcuts
bindsym $mod+Return exec wezterm
bindsym $mod+b exec brave-browser
bindsym $mod+t exec thunar
bindsym $mod+c exec code
bindsym $mod+d exec rofi -show drun
bindsym $mod+q kill

# Window focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Window movement
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Layout management
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

